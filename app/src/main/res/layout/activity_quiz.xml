<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="347dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/problem_statement_textview"
            android:layout_width="550dp"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:background="@drawable/frame_border_layout"
            android:textColor="#8a8a8a" />

        <Button
            android:id="@+id/choices_1_button"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignStart="@+id/choices_3_button"
            android:layout_alignTop="@+id/choices_2_button"
            android:background="@drawable/quiz_button_state"
            android:onClick="OnChoicesButton1Click"
            android:text=""
            android:textColor="#8a8a8a" />

        <Button
            android:id="@+id/choices_2_button"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="347dp"
            android:layout_marginBottom="248dp"
            android:background="@drawable/quiz_button_state"
            android:onClick="OnChoicesButton2Click"
            android:text=""
            android:textColor="#8a8a8a" />

        <Button
            android:id="@+id/choices_3_button"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginBottom="92dp"
            android:background="@drawable/quiz_button_state"
            android:onClick="OnChoicesButton3Click"
            android:text=""
            android:textColor="#8a8a8a" />

        <Button
            android:id="@+id/choices_4_button"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignStart="@+id/choices_2_button"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="91dp"
            android:background="@drawable/quiz_button_state"
            android:onClick="OnChoicesButton4Click"
            android:text=""
            android:textColor="#8a8a8a" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/exit_button_state"
            android:onClick="OnExitButtonClick"
            android:text="終了" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>